{
	"info": {
		"_postman_id": "19admin-admin-mgmt-001",
		"name": "19. Admin Management",
		"description": "Admin panel endpoints for managing admins - create, update, activate, deactivate, password reset, and unlock operations",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Get All Admins",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has pagination structure\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('admins');",
							"    pm.expect(jsonData).to.have.property('currentPage');",
							"    pm.expect(jsonData).to.have.property('totalPages');",
							"    pm.expect(jsonData).to.have.property('totalElements');",
							"    pm.expect(jsonData).to.have.property('pageSize');",
							"});",
							"",
							"pm.test(\"Admins array exists\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.admins).to.be.an('array');",
							"});",
							"",
							"pm.test(\"Admin items have required fields\", function () {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.admins.length > 0) {",
							"        var admin = jsonData.admins[0];",
							"        pm.expect(admin).to.have.property('id');",
							"        pm.expect(admin).to.have.property('username');",
							"        pm.expect(admin).to.have.property('email');",
							"        pm.expect(admin).to.have.property('level');",
							"        pm.expect(admin).to.have.property('isActive');",
							"        ",
							"        // Save admin ID for other tests",
							"        pm.environment.set('test_admin_id', admin.id);",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{admin_token}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/v1/admin/admins?page=0&size=10&sortBy=createdAt&sortDirection=desc",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "admin", "admins"],
					"query": [
						{
							"key": "page",
							"value": "0"
						},
						{
							"key": "size",
							"value": "10"
						},
						{
							"key": "sortBy",
							"value": "createdAt"
						},
						{
							"key": "sortDirection",
							"value": "desc"
						}
					]
				},
				"description": "Get paginated list of all admins (filtered by permission). Super admins see all admins, regular admins see only moderators."
			},
			"response": []
		},
		{
			"name": "2. Get Admin by ID",
			"event": [
				{
					"listen": "test",
