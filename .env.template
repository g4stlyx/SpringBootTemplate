# Application Configuration
APP_NAME=Template App Name
APP_VERSION=1.0.0
SERVER_PORT=8080

# Security Configuration
PEPPER=x
JWT_SECRET=y
JWT_EXPIRATION_MS=900000
JWT_REFRESH_EXPIRATION_MS=604800000
JWT_REFRESH_TOKEN_EXPIRATION=7 # days
COOKIE_SECURE=true

RECAPTCHA_SECRET_KEY=x # backend
RECAPTCHA_SITE_KEY=y # frontend
RECAPTCHA_ENABLED=false # //TODO: set to true after implementation (which will be after domain purchase)

LOG_SENSITIVE_ACCESS=true
SENSITIVE_ACCESS_EMAIL_ALERT=true

INIT_USERS=false

# Password Hashing (Argon2id)
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=4
ARGON2_SALT_LENGTH=32
ARGON2_HASH_LENGTH=64

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=dbname
DB_USER=root
DB_PASSWORD=123456

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=x@gmail.com
MAIL_PASSWORD=xxxx yyyy zzzz tttt

# Cloudflare R2
# API endpoint: x.r2.cloudflarestorage.com
# read & write permissions for the bucket template-app
CLOUDFLARE_R2_ACCESS_KEY=x
CLOUDFLARE_R2_SECRET_KEY=y
CLOUDFLARE_R2_ACCOUNT_ID=z
CLOUDFLARE_R2_BUCKET_NAME=template-app
CLOUDFLARE_R2_PUBLIC_DOMAIN=https://pub-t.r2.dev

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
ADMIN_EMAIL=x@gmail.com

# Rate Limiting
RATE_LIMIT_GLOBAL_REQUESTS=30
RATE_LIMIT_GLOBAL_WINDOW=60000
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW=900000
RATE_LIMIT_API_CALLS=100
RATE_LIMIT_API_WINDOW=60000
RATE_LIMIT_CHAT_REQUESTS=20
RATE_LIMIT_CHAT_WINDOW=60000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://template-app.net
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type

# Database Backup
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_EMAIL=x@gmail.com
DATABASE_BACKUP_DIRECTORY=backups
MYSQLDUMP_PATH=mysqldump

ACTIVITY_LOG_RETENTION_DAYS=30